<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/clock" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <soup.neumorphism.NeumorphButton
            android:id="@+id/btn_frag_noti_pick_time"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            style="@style/customNeuporphButton"
            android:text="Pick Time"
            android:layout_gravity="center"/>


        <soup.neumorphism.NeumorphButton
            android:id="@+id/btn_frag_noti_pick_date"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            style="@style/customNeuporphButton"
            android:text="Pick Date"
            android:layout_gravity="center" />

    </LinearLayout>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="300dp"
        android:layout_height="75dp"
        style="@style/customNeuporphCardEdittext">

        <EditText
            android:id="@+id/et_frag_noti_subject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/customStyleEdittext"
            android:hint="Enter Subject" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:neumorph_shapeType="basin">

        <EditText
            android:id="@+id/et_frag_noti_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/customStyleEdittext"
            android:hint="Enter Description"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_frag_noti_set_alarm"
        android:layout_width="250dp"
        android:layout_height="75dp"
        style="@style/customNeuporphButton"
        android:text="Set Alarm"
        android:layout_gravity="center"/>


</LinearLayout>